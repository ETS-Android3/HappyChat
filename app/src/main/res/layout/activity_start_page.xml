<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="happysingh.thehappychat.start_page"
    android:background="@drawable/bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Happy Chat"
            android:layout_weight="1"
            android:textSize="40dp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:fontFamily="@font/alfa_slab_one"
            android:textColor="#fff"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/icon"
            android:padding="1dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay Connected"
            android:textColor="#fff"
            android:fontFamily="@font/bungee_inline"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_weight="1"

            android:paddingTop="30dp"/>

        <Button
            android:id="@+id/bt_start_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_weight="1"
            android:padding="3dp"
            android:fontFamily="@font/black_ops_one"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:textColor="#fff"
            android:background="@drawable/single_button_shape"
            />

        <Button
            android:id="@+id/bt_start_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:layout_weight="1"
            android:textSize="30dp"
            android:padding="3dp"
            android:textColor="#fff"
            android:fontFamily="@font/black_ops_one"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/single_shape_button_2"
            />
    </LinearLayout>





</RelativeLayout>
