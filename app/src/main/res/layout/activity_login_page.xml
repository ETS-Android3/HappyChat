<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="happysingh.thehappychat.login_page">

    <include layout="@layout/tool_bar_my" android:id="@+id/login_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Happy Chat "

            android:textSize="30sp"
            android:textColor="#fff"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingTop="70dp"
            android:textAlignment="center"
            android:layout_weight="3"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/icon" />

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Email"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/single_edit_text"
            android:textSize="20sp"
            android:textColor="#37373A"


            />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="#37373A"
            android:layout_margin="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/single_edit_text"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:background="@drawable/single_button_shape"


            android:fontFamily="@font/black_ops_one"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#fff"

                android:fontFamily="@font/londrina_solid"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:text="Forgot Password ?"/>

            <Button
                android:id="@+id/et_login_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset Password"
                android:background="@drawable/single_shape_button_2"
                android:layout_marginRight="35dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:textColor="#fff"
                android:fontFamily="@font/bungee_inline"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>


    </LinearLayout>





</RelativeLayout>
