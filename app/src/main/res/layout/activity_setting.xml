<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="happysingh.thehappychat.SettingActivity"
    android:background="@drawable/bg_status">
    <include layout="@layout/tool_bar_my" android:id="@+id/profile_tool"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:id="@+id/profile_pic"
            android:layout_weight="7"
            android:src="@drawable/profile_round" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bungee_inline"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="Happy Singh"
            android:id="@+id/profile_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="Kaal Kre So Aaj Kr aaj Kre So Aab Pagle"
            android:id="@+id/profile_status"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="as@gmail.com"
            android:fontFamily="@font/alfa_slab_one"
            android:id="@+id/profile_email"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="#123"
            android:text="Change Image"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#fff"
            android:layout_marginBottom="20dp"
            android:id="@+id/bt_profile_change_image"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#E62B2B"
            android:text="Change Status"
            android:layout_marginBottom="20dp"
            android:id="@+id/bt_profile_change_status"/>


    </LinearLayout>



</RelativeLayout>
